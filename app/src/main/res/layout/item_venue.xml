<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:orientation="horizontal"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="6dp"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_placeholder_text"
            android:layout_width="wrap_content"
            android:text="Name: "
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/name_placeholder_text"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/address_placeholder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textStyle="bold"
            android:layout_below="@id/name_placeholder_text" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/address_placeholder_text"
            android:layout_below="@id/name" />

        <LinearLayout
            android:gravity="end"
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/address"
            android:orientation="horizontal"
            android:visibility="visible" />

    </RelativeLayout>
    >
</android.support.v7.widget.CardView>