<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/card_vertical_margin"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="@dimen/horizontal_card_padding">

        <TextView
            android:id="@+id/name_placeholder_text"
            style="@style/TextLabel"
            android:text="@string/venue_name_label" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_placeholder_text" />

        <TextView
            android:id="@+id/address_placeholder_text"
            style="@style/TextLabel"
            android:layout_below="@id/name_placeholder_text"
            android:text="@string/venue_address_label" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/address_placeholder_text" />

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icons_container_height"
            android:layout_below="@id/address"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="visible" />

    </RelativeLayout>
    >
</android.support.v7.widget.CardView>